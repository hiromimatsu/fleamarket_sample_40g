.accountRegistration
  .accountRegistration__title
  = image_tag 'logo.png', alt: '失敗', height: '50px', width: '100%', class: 'pic'
  .accountRegistration__title
    %h2 ユーザー情報登録2
  = form_for(@profile, url: profiles_path, method: :post) do |f|
    = render "devise/shared/error_messages", resource: @profile
    .FormField
      .FormField__label--normal
        = f.label :名前漢字
        %span.requireBox
          必須
      .FormField__input--normal
        = f.text_field :first_name
      .FormField__label--normal
        = f.label :名字漢字
        %span.requireBox
          必須
      .FormField__input--normal
        = f.text_field :family_name
      .FormField__label--normal
        = f.label :名前かな
        %span.requireBox
          必須
      .FormField__input--normal
        = f.text_field :first_name_kana
      .FormField__label--normal
        = f.label :名字かな
        %span.requireBox
          必須
      .FormField__input--normal
        = f.text_field :family_name_kana
      .FormField__label--normal
        = f.label :生年月日
        %span.requireBox
          必須
      .FormField__input--normal
        %p.birthday
        != sprintf(f.date_select(:birthday, require:true,with_css_classes:'XXXXX', prompt:"--",use_month_numbers:true, start_year:Time.now.year, end_year:1900, date_separator:'%s'),'年 ','月 ')+'日' 
    
    .actions
      = f.submit "Next!",class: "Button"
    //= render "devise/shared/links"
