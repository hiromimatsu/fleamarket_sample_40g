= form_for(@profile, url: profiles_path, method: :post) do |f|
  = render "devise/shared/error_messages", resource: @profile
  .field
    = f.label :first_name
    %br/
    = f.text_field :first_name
  .field
    = f.label :family_name
    %br/
    = f.text_field :family_name
  .field
    = f.label :first_name_kana
    %br/
    = f.text_field :first_name_kana
  .field
    = f.label :family_name_kana
    %br/
    = f.text_field :family_name_kana
  .field
    = f.label :birth_year
    %br/
    = f.date_select :birth_year> |
      </div>                     |
      <div class="field">        |
      <%= f.label :birth_month   |
    %br/
    = f.text_field :birth_month
  .field
    = f.label :birth_day
    %br/
    = f.text_field :birth_day
  .actions
    = f.submit "Next"
= render "devise/shared/links"
