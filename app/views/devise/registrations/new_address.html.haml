%h2 商品送付先住所情報登録
= form_for(@address, url:addresses_path, method: :post) do |f|
  = render "devise/shared/error_messages", resource: @address
  .field
    = f.label :destination_first_name
    %br/
    = f.text_field :destination_first_name
  .field
    = f.label :destination_family_name
    %br/
    = f.text_field :destination_family_name
  .field
    = f.label :destination_first_name_kana
    %br/
    = f.text_field :destination_first_name_kana
  .field
    = f.label :destination_family_name_kana
    %br/
    = f.text_field :destination_family_name_kana
  .field
    = f.label :post_code
    %br/
    = f.number_field :post_code
  .field
    = f.label :prefecture
    %br/
    = f.select :prefecture, Address.prefectures.keys,{}
  .field
    = f.label :city
    %br/
    = f.text_field :city
  .field
    = f.label :house_number
    %br/
    = f.text_field :house_number
  .field
    = f.label :building_name
    %br/
    = f.text_field :building_name
  .field
    = f.label :phone_number
    %br/
    = f.number_field :phone_number
  .actions
    = f.submit "Sign up"
= render "devise/shared/links"
