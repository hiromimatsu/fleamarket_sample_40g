.logIn
  .logIn__header
    .logIn__icon
      = link_to image_tag 'logo.png', alt: '失敗', height: '60px', width: '100px', class: 'pic1'
  
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .logIn__snsicon
      google
    .logIn__snsicon
      Facebook
    .logIn__snsicon
      Apple
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email"
    .field
      = f.label :password
      %br/
      = f.password_field :password, autocomplete: "current-password"
    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :remember_me
    .actions
      = f.submit "Log in", class: "btn"
  = render "devise/shared/links"

.AccountPage
  .AccountPage__title
    %h2 
    = image_tag 'logo.png', alt: '失敗', height: '50px', width: '100%', class: 'pic'
    %h5 アカウントをお持ちでない方はこちら
    = render "devise/shared/links"
  .AccountPage__snsBox
    .AccountPage__google
      //= link_to image_tag '#', alt: '失敗', height: '50px', width: '100%', class: 'pic'
    .AccountPage__twitter
      //= link_to image_tag '#', alt: '失敗', height: '50px', width: '100%', class: 'pic'
    .AccountPage__facebook
      //= link_to image_tag '#', alt: '失敗', height: '50px', width: '100%', class: 'pic'
    .memo
      ↑イメージで入れいます
  .AccountPage__form
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .FormField
        .FormField__label--normal
          = f.label :email
        .FormField__input--normal
          = f.email_field :email, autofocus: true
        .FormField
          .FormField__label--normal
            = f.label :password
            %i (英数字8文字以上)
          .FormField__input--normal
            = f.password_field :password, autocomplete: "off"
        .actions
          = f.submit "Log in", class: 'Button UserButton'
