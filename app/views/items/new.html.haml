        .deriveryDays
          %h3.deriveryDaysTitle
            発送までの日数
            %span.requireBox
              必須
          .deriveryDaysForm              
            %select.daysChoice
              %option{:value => "0"} 選択してください
              %option{:value => "1"} 1〜2日で発送
              %option{:value => "2"} 2〜3日で発送
              %option{:value => "3"} 4〜7日で発送
      .price
        .priceTitle
          価格 (￥300~9,999,999)
        .priceSellingprice
          %h3.priceSellingpriceTitle
            販売価格
            %span.requireBox
              必須
          .priceSellingSymbol
            ￥
            %input{placeholder: "金額を入力してください", class: "moneyForm"}   
        .priceFee
          .priceFeeTitle
            .priceFeeTitleLeft
              %h3 販売手数料 (10%)
            .priceFeeTitleRight
              %h3 ー
          .priceProfit
            .priceProfitTitleLeft
              %h3 販売利益
            .priceProfitTitleRight
              %h3 ー

      .button
        %button{type: "submit", class: "buttonRed"}
          出品する
        %button{type: "submit", class: "buttonGrey"}
          下書きに保存
        .backToTopPage
          = link_to "root_path" do
            戻る
      



